<div class="container px-5 px-sm-0">
  <div class="row">
     <div class="col-md-3">
      <%= render 'users/user', user: @user %>
   
      <%= render 'books/book', book: @new_book %>

     </div>
     <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= attachment_image_tag @user, :profile_image, size:"40x40", fallback: "no_image.jpg" %><br />
              <%= link_to @user.name, user_path(@user.id) %>
            </td>
            <td><%= link_to @book.title, book_path(@book.id) %></td>
            <td><%= @book.body %></td>
            <% if @user.id == current_user.id %>
            <td><%= link_to 'Edit', edit_book_path(@book.id), class: 'btn btn-success' %></td>
            <td><%= link_to 'Destroy', book_path(@book.id), method: :delete, "data-cofirm" => "本当に消しますか？", class: 'btn btn-danger'%></td>
            <% end %>
          </tr>
        </tbody>
      </table>
   </div>
  </div>
</div>