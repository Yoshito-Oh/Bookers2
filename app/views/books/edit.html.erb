<div class="continer">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
     
        <div class="edit-title">
        <h1>Editing Book</h1>
      </div>
       <div class="Editbook">
       <% if @book.errors.any? %>
       <div class="errors">
        <h4 class="error-title">2 errors prohibited this book form being saved:</h4>
        <ul>
         <% @book.errors.full_messages.each do |message| %>
         <li><%= message %></li>
         <% end %>
        </ul>
       </div>
      <% end %>
      <div class="from-group">
        
      </div>
      <%= form_with model:@book, local: true do |f|%>
       <p>Title<br /><%= f.text_field :title %></p>
       <p>Body<br /><%= f.text_area :body %></p>
       <br />
       <input type="submit" name="commit" value="Update Book" class="btn btn-success" data-disable-with="Updata Book"></input>
       <br />
      <%= link_to 'Show', book_path(@book.id) %> |
      <%= link_to 'Back', books_path %>
      <% end %>
      </div>
      
    </div>
  </div>
</div>