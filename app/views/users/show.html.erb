<h2>Users show</h2>

<div class="container px-5 px-sm-0">
  <div class="row">
      <div class="col-sm-3">
          
      </div>
      <div class="col-sm-8 offset-md-1">
          <h2>Books</h2>
          <table class="table table-hover table-inverse">
              <thead>
                  <tr>
                      <th></th>
                      <th>Title</th>
                      <th>Opinion</th>
                      <th colspan="3"></th>
                  </tr>
              </thead>
              <tbody>
                  <% @user.each do |f|%>
                  <tr>
                      <td><%= f.attachment_image_tag, :image :fill, 40, 40, format:'jpeg' %></td>
                      <td><%= link_to f.title %></td>
                      <td><%= f.body %></td>
                      <td></td>
                  </tr>
                  <% end %>
              </tbody>
          </table>
      </div>
  </div>
</div>