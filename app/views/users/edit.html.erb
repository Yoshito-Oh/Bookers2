
<div class="container">
  <div class="row">
    
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <div class="iferror">
        <% if @user.errors.any? %>
          <div class="errors">
            <h4 class="error-title">2 errors prohibited this book form being saved:</h4>
            <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>  
      </div>
  
      <%= form_with model:@user, url: user_path(@user),method: :patch, local:true do |f| %>
      <label>Name</label>
      <%= f.text_field :name ,class: "text-box"%>
      <br>
      <label>Image</label>
      <br>
      <%= f.attachment_field :profile_image %>
      <br />
      <br>
      <label>Introduction</label>
      <%= f.text_area :introduction ,class: "text-box"%>
      <br>
      <%= f.submit 'Update User', class: "btn btn-secondary" %>
      <% end %>
    </div>
  </div>
</div>
