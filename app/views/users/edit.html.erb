<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= form_with model:@user, url:'/users', local:true do |f| %>
      <h4>Nmae</h4>
      <%= f.text_field :name %>
      <h4>Image</h4>
      <%= f.attachment_filed :image %>
      <h4>Introduction</h4>
      <%= f.text_area :body %>
      <% f.submit 'Update User' class: "btn btn-secondary" %>
    </div>
  </div>
</div>





